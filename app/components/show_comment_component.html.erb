<% comment=@comment %>


<% def  remder(comment)%>
<% return if comment.nil?%>
  <% comment.comments.each do |sub_comment|%>
  <div class="sub_comment ml-4" id="<%= dom_id sub_comment%>">
    <%= render(CommentComponent.new(comment: sub_comment)) %>
   <%remder(sub_comment)%>
  </div>
  <% end %>
<% end %>

<div id="<%= dom_id comment%>">
  <%= render(CommentComponent.new(comment: comment)) %>
  <%remder(comment)%>
</div>
