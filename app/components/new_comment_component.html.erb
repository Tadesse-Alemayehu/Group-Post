<% comment=@comment %>
<% contents=@contents %>

<% if contents.class.to_s == 'Comment' %>
<%= form_with(model: comment, url: user_group_post_comments_path(user_id: current_user.id, group_id: params[:group_id]||0, post_id: 0, comment_id: contents.id)) do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "dark:bg-slate-800"%>
  </div>
  <div class="actions">
    <%= f.submit value: "Replay", "data-action": "modal#toggleReplay", target: "replay_to_#{comment.id}", method: "post"%>
  </div>
<% end %>
<% else %>
<%= form_with(model: comment, url: user_group_post_comments_path(user_id: current_user.id, group_id: params[:group_id]||0, post_id: contents.contents.id, comment_id: nil)) do |f| %>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit  "data-action": "modal#toggleReplay", target: "replay_to_#{comment.id}"%>
  </div>
<% end %>
<% end %>
